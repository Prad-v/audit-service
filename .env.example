# Database Configuration
DATABASE_URL=postgresql+asyncpg://audit_user:audit_password@localhost:5432/audit_logs
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10
REDIS_CACHE_TTL=3600

# NATS Configuration
NATS_URL=nats://localhost:4222
NATS_CLUSTER_ID=audit-cluster
NATS_CLIENT_ID=audit-api
NATS_MAX_RECONNECT=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/audit-api.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# Environment
ENVIRONMENT=development
DEBUG=true

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000

# Export Configuration
EXPORT_MAX_RECORDS=100000
EXPORT_TIMEOUT_SECONDS=300

# Worker Configuration
WORKER_CONCURRENCY=4
WORKER_PREFETCH_COUNT=10
BATCH_SIZE=1000
BATCH_TIMEOUT_SECONDS=5

# Retention Configuration
DEFAULT_RETENTION_DAYS=90
MAX_RETENTION_DAYS=2555  # 7 years
CLEANUP_INTERVAL_HOURS=24

# BigQuery Configuration (for production)
BIGQUERY_PROJECT_ID=your-gcp-project
BIGQUERY_DATASET=audit_logs
BIGQUERY_TABLE=events
BIGQUERY_LOCATION=US

# Pub/Sub Configuration (for production)
PUBSUB_PROJECT_ID=your-gcp-project
PUBSUB_TOPIC=audit-events
PUBSUB_SUBSCRIPTION=audit-processor

# Authentication Providers
OAUTH2_ENABLED=false
OAUTH2_CLIENT_ID=your-oauth2-client-id
OAUTH2_CLIENT_SECRET=your-oauth2-client-secret
OAUTH2_ISSUER_URL=https://your-oauth-provider.com

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Feature Flags
FEATURE_EXPORT_ENABLED=true
FEATURE_BATCH_PROCESSING=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_ADVANCED_SEARCH=true

# Development Tools
ENABLE_SWAGGER_UI=true
ENABLE_REDOC=true
ENABLE_DEBUG_TOOLBAR=false