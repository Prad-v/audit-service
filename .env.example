# Audit Service Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
DATABASE_URL=postgresql://audit_user:audit_password@localhost:5432/audit_logs
EVENTS_DATABASE_URL=postgresql://events_user:events_password@localhost:5432/events_db
ALERTING_DATABASE_URL=postgresql://alerting_user:alerting_password@localhost:5432/alerting_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# NATS Configuration
NATS_URL=nats://localhost:4222

# StackStorm Configuration
STACKSTORM_API_URL=http://stackstorm:9101
STACKSTORM_AUTH_URL=http://stackstorm:9100
STACKSTORM_USERNAME=st2admin
STACKSTORM_PASSWORD=st2admin
STACKSTORM_API_KEY=

# API Configuration
INCIDENT_API_URL=http://api:8000/api/v1/incidents

# Logging Configuration
LOG_LEVEL=INFO

# Frontend Configuration
NODE_ENV=development
VITE_API_URL=http://api:8000

# Security (for production)
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# External Services (optional)
GRAFANA_URL=http://localhost:3001
PROMETHEUS_URL=http://localhost:9090
